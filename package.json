{
  "name": "consigliere",
  "private": true,
  "version": "0.0.1",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_OPTIONS=--no-warnings nodemon --watch \"src/**\" --ext \"ts\" --ignore \"src/**/*.spec.ts\" --exec \"ts-node src/main.ts\"",
    "start": "NODE_OPTIONS=--no-warnings ts-node src/main.ts",
    "test": "mocha tests/**/*.spec.ts",
    "lint": "prettier -w --",
    "prepare": "husky install"
  },
  "author": "Ehsaan Forghani <e.forqaani@gmail.com>",
  "dependencies": {
    "@azure/msal-node": "^1.12.0",
    "chalk": "^4.1.2",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "inquirer": "^8.2.4",
    "pino": "^8.3.0",
    "reflect-metadata": "^0.1.13",
    "ts-node": "^10.9.1",
    "tsyringe": "^4.7.0",
    "typescript": "^4.7.4",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.1",
    "@types/express": "^4.17.13",
    "@types/inquirer": "^8.2.1",
    "@types/luxon": "^3.0.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^18.6.1",
    "@types/sinon": "^10.0.13",
    "@types/uuid": "^8.3.4",
    "chai": "^4.3.6",
    "concurrently": "^7.3.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "luxon": "^3.0.1",
    "mocha": "^10.0.0",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "sinon": "^14.0.0"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "npm run lint"
    ]
  }
}
